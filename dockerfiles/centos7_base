FROM centos:centos7

LABEL Name="TOAD" \
      Version="{placeholder}"

RUN yum update -y && yum install -y sudo iproute epel-release && \
    yum install -y openssh openssh-server openssh-clients && \
    yum install -y python-pip && \
    sed -ie 's/requiretty/!requiretty/g' /etc/sudoers && \
    yum -y clean all
